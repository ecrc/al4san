/* Simulation */
#cmakedefine ALTANAL_SIMULATION

/* Tracing support */
#cmakedefine ALTANAL_ENABLE_TRACING

/* getopt */
#cmakedefine ALTANAL_HAVE_GETOPT_H
#cmakedefine ALTANAL_HAVE_GETOPT_LONG

#ifdef BEGIN_C_DECLS
#undef BEGIN_C_DECLS
#endif

#ifdef END_C_DECLS
#undef END_C_DECLS
#endif

#if defined(c_plusplus) || defined(__cplusplus)
# define BEGIN_C_DECLS extern "C" {
# define END_C_DECLS }
