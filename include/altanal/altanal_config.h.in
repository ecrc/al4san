#ifndef ALTANAL_CONFIG_H_HAS_BEEN_INCLUDED
#define ALTANAL_CONFIG_H_HAS_BEEN_INCLUDED

#define ALTANAL_VERSION_MAJOR @ALTANAL_VERSION_MAJOR@
#define ALTANAL_VERSION_MINOR @ALTANAL_VERSION_MINOR@
#define ALTANAL_VERSION_MICRO @ALTANAL_VERSION_MICRO@

/* Scheduling engine */
#cmakedefine ALTANAL_SCHED_QUARK
#cmakedefine ALTANAL_SCHED_PARSEC
